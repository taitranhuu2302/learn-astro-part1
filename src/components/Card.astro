---
import {log} from "astro/dist/core/logger/core";
interface Props {
    title: string;
    body: string;
    href: string;
}

const {href, title, body, handleCardClick} = Astro.props;
---

<li class="link-card-astro">
    <a>
        <h2>
            {title}
            <span>&rarr;</span>
        </h2>
        <p>
            {body}
        </p>
    </a>
</li>

<script>
    const cards = document.querySelectorAll(".link-card-astro")
    cards.forEach((card) => {
        card.addEventListener('click', () => {
            console.log('Astro xin chao')
        })
    })
</script>
<style>
    .link-card-astro {
        list-style: none;
        display: flex;
        padding: 1px;
        background-color: #23262d;
        background-image: none;
        background-size: 400%;
        border-radius: 7px;
        background-position: 100%;
        transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
        box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
    }

    .link-card-astro > a {
        width: 100%;
        text-decoration: none;
        line-height: 1.4;
        padding: calc(1.5rem - 1px);
        border-radius: 8px;
        color: white;
        background-color: #23262d;
        opacity: 0.8;
    }

    h2 {
        margin: 0;
        font-size: 1.25rem;
        transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    }

    p {
        margin-top: 0.5rem;
        margin-bottom: 0;
    }

    .link-card-astro:is(:hover, :focus-within) {
        background-position: 0;
        background-image: var(--accent-gradient);
    }

    .link-card-astro:is(:hover, :focus-within) h2 {
        color: rgb(var(--accent-light));
    }
</style>
